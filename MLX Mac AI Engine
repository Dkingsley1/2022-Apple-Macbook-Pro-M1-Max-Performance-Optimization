# Install Homebrew (Mac Package Manager)
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Install Python 3
brew install python

# Create and enter the project folder
mkdir ~/MyAI && cd ~/MyAI

# Create the virtual environment
python3 -m venv .venv

# Activate the environment
source .venv/bin/activate

pip install mlx-lm

python3 -m mlx_lm.chat --model mlx-community/Llama-3.2-3B-Instruct-4bit

# Run this once to create the 'chat' command
echo "alias chat='cd ~/MyAI && source .venv/bin/activate && python3 -m mlx_lm.chat --model mlx-community/Llama-3.2-3B-Instruct-4bit'" >> ~/.zshrc

# Now you can just type 'chat' in any new terminal window
